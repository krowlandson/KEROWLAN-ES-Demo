{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Deny-Subnet-Without-Udr",
        "ResourceId": "/providers/Microsoft.Management/managementgroups/tf/providers/Microsoft.Authorization/policyDefinitions/Deny-Subnet-Without-Udr",
        "ResourceName": "Deny-Subnet-Without-Udr",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": null,
        "PolicyDefinitionId": "/providers/Microsoft.Management/managementgroups/tf/providers/Microsoft.Authorization/policyDefinitions/Deny-Subnet-Without-Udr",
        "Properties": {
          "Description": "This policy denies the creation of a subsnet with out a User Defined Route.",
          "DisplayName": "Subnets should have a User Defined Route",
          "Mode": "All",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Deny"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.Network/virtualNetworks/subnets",
                  "field": "type"
                },
                {
                  "exists": "false",
                  "field": "Microsoft.Network/virtualNetworks/subnets/routeTable.id"
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          }
        }
      }
    }
  }
}

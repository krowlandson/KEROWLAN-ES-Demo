{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Deny-AppServiceFunctionApp-http",
        "ResourceId": "/providers/Microsoft.Management/managementgroups/tf/providers/Microsoft.Authorization/policyDefinitions/Deny-AppServiceFunctionApp-http",
        "ResourceName": "Deny-AppServiceFunctionApp-http",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": null,
        "PolicyDefinitionId": "/providers/Microsoft.Management/managementgroups/tf/providers/Microsoft.Authorization/policyDefinitions/Deny-AppServiceFunctionApp-http",
        "Properties": {
          "Description": "Use of HTTPS ensures server/service authentication and protects data in transit from network layer eavesdropping attacks.",
          "DisplayName": "Function App should only be accessible over HTTPS",
          "Mode": "All",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "allowedValues": [
                "Audit",
                "Disabled",
                "Deny"
              ],
              "defaultValue": "Deny"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.Web/sites",
                  "field": "type"
                },
                {
                  "field": "kind",
                  "like": "functionapp*"
                },
                {
                  "equals": "false",
                  "field": "Microsoft.Web/sites/httpsOnly"
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          }
        }
      }
    }
  }
}

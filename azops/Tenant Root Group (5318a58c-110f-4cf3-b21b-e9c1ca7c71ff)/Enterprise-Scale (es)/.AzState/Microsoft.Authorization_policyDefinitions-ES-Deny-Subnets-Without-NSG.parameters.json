{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "ES-Deny-Subnets-Without-NSG",
        "ResourceId": "/providers/Microsoft.Management/managementgroups/es/providers/Microsoft.Authorization/policyDefinitions/ES-Deny-Subnets-Without-NSG",
        "ResourceName": "ES-Deny-Subnets-Without-NSG",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": null,
        "PolicyDefinitionId": "/providers/Microsoft.Management/managementgroups/es/providers/Microsoft.Authorization/policyDefinitions/ES-Deny-Subnets-Without-NSG",
        "Properties": {
          "Description": "Deny-Subnets-Without-NSG",
          "DisplayName": "ES-Deny-Subnets-Without-NSG",
          "Mode": "All",
          "Parameters": null,
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.Network/virtualNetworks/subnets",
                  "field": "type"
                },
                {
                  "exists": "false",
                  "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id"
                }
              ]
            },
            "then": {
              "effect": "deny"
            }
          }
        }
      }
    }
  }
}

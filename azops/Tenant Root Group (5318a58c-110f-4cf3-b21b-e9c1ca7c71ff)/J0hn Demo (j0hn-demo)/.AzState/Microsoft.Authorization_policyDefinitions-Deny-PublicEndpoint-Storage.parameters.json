{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "Name": "Deny-PublicEndpoint-Storage",
        "ResourceId": "/providers/Microsoft.Management/managementgroups/j0hn-demo/providers/Microsoft.Authorization/policyDefinitions/Deny-PublicEndpoint-Storage",
        "ResourceName": "Deny-PublicEndpoint-Storage",
        "ResourceType": "Microsoft.Authorization/policyDefinitions",
        "SubscriptionId": null,
        "PolicyDefinitionId": "/providers/Microsoft.Management/managementgroups/j0hn-demo/providers/Microsoft.Authorization/policyDefinitions/Deny-PublicEndpoint-Storage",
        "Properties": {
          "Description": "This policy denies creation of storage accounts with IP Firewall exposed to all public endpoints",
          "DisplayName": "Public network access onStorage accounts should be disabled",
          "Mode": "All",
          "Parameters": {
            "effect": {
              "type": "String",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Deny"
            }
          },
          "PolicyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.Storage/storageAccounts",
                  "field": "type"
                },
                {
                  "field": "Microsoft.Storage/storageAccounts/networkAcls.defaultAction",
                  "notequals": "Deny"
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          }
        }
      }
    }
  }
}
